{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@/*": ["./src/*"]
    },
    "useUnknownInCatchVariables": false,
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "config.ts",
    "scripts",
    "eslint.config.ts",
    "vitest.config.mts"
  ],
  "exclude": [
    "src/public/*"
  ]
}
